{
  "compilerOptions": {
    "noEmit": false,
    "baseUrl": ".",
    "outDir": "dist",
    "importHelpers": true,
    "target": "es6",
    "strict": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/example"]
}
